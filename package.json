{
  "name": "@lfe/casket-star",
  "version": "0.0.22-beta2",
  "type": "module",
  "files": [
    "dist"
  ],
  "description": "A lightweight, customizable modern Markdown editor.",
  "keywords": [
    "markdown",
    "remark",
    "rehype",
    "codemirror"
  ],
  "bugs": {
    "url": "https://github.com/DWaveletT/casket-star/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DWaveletT/casket-star.git"
  },
  "main": "./dist/casket-star.umd.cjs",
  "module": "./dist/casket-star.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/casket-star.js",
      "require": "./dist/casket-star.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./themes/*": "./dist/themes/*"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "lint": "eslint ./src --ext .js,.ts,.vue",
    "build": "yarn run build-casket && yarn run build-themes",
    "build-casket": "vite build && vue-tsc --emitDeclarationOnly",
    "build-themes": "yarn sass src/themes/:dist/themes/",
    "preview": "vite preview",
    "test": "exit 0"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.2.5",
    "@codemirror/state": "^6.4.1",
    "@codemirror/view": "^6.28.6",
    "codemirror": "^6.0.1",
    "lodash-es": "^4.17.21",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "unified": "11.0.4",
    "vue": "^3.4.33",
    "vue-codemirror": "^6.1.1",
    "vue-tsc": "^2.0.28"
  },
  "devDependencies": {
    "@awesome.me/kit-336dcd0b68": "^1.0.41",
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@types/hast": "^3.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/mdast": "^4.0.4",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-vue": "^9.27.0",
    "rollup-plugin-copy": "^3.5.0",
    "sass": "^1.77.4",
    "typescript": "~5.4.5",
    "vite": "^5.3.4",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-dts": "^3.9.1"
  }
}
