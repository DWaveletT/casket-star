{
  "compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"types": ["vite/client"],
		"skipLibCheck": true,
		"paths": {
			"~/*": ["./src/*"]
		},
		"outDir": "dist",
		"declaration": true
	},
  	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts", 
		"src/**/*.tsx", 
		"src/**/*.vue"
	]
}
